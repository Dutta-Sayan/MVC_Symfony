<div class="container">
  <h2>Create Profile</h2>
  <div class="set-profile">
    <form action="" method="post">
      <div class="row">
        <div class="form-input col">
          <label for="studentName">Your Name</label><br>
          <input class="form-control" type="text" placeholder="{{app.user.Name}}" name="studentName" value="{{app.user.Name}}" disabled>
        </div>
        <div class="form-input col">
          <label for="email">Student Email</label><br>
          <input class="form-control" type="text" placeholder={{app.user.email}} name="email" value={{app.user.email}} disabled>
        </div>
      </div>
      <div class="row">
        <div class="form-input col">
          <label for="age">Your Age</label><br>
          <input class="form-control" type="number" name="age" class="age" placeholder="Minimum 20 maximum 30" min="20" max="30">
        </div>
        <div class="form-input col"> 
          <label for="rollNo">Roll No</label><br>
          <input class="form-control" type="number" name="rollNo" class="rollNo" min="1" max="100">
        </div>
      </div>
      
      <div class="row"> 
        <div class="form-input col">
          <label for="gradYear">Graduation Year</label><br>
          <input class="form-control" type="number" name="gradYear" placeholder="Between 2015 and 2027" class="gradYear" min="2015" max="2027">
        </div>
        <div class="form-input col">
          <label for="academicMarks">Enter academic Marks (Percentage)</label><br>
          <input class="form-control" type="text" name="academicMarks" class="academicMarks" pattern="\(([0-9]{1,2})*\.?([0-9]{1,2})*)\">
        </div>
      </div>
      <div class="form-input row">
        <label for="resumeLink">Enter link for resume</label><br>
        <input class="form-control" type="url" name="resumeLink" class="resumeLink">
      </div>
        <input class="profile-submit btn btn-success" name="submit" type="submit" value="Submit">
      </div>
    </form>
    <span><a href="/student" class="btn btn-primary float-end">Go to dashboard</a></span>
  </div>
  
</div>
