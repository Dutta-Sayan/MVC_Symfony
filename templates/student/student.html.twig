{% extends 'base.html.twig' %}

{% block title %}Student Dashboard{% endblock %}
{% block javascripts %}
  {% block importmap %}{{ importmap('student') }}{% endblock %}
{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}
{% block body %}

<section>
  <div class="container student-portal">
    <h2>Welcome to Student's Portal</h2>
    <div class="welcome-header">
      <h3>Welcome {{name}}</h3>
    </div>
    <a href="/logout" class="btn btn-danger float-end">Logout</a><br>
    <div class="student-dashboard">
      <div class="card">
        <div class="view-profile">
          <img src="{{asset ('../assets/images/profile-icon.png')}}" alt="">
        </div>
        <div class="card-body">
          <span><a href="/student/profile" class="btn btn-info">Your Profile</a></span>
        </div>
      </div>

      <div class="card">
        <div class="exam-available">
          <img src="{{asset ('../assets/images/available-exams.jpg')}}" alt="">
        </div>
        <div class="card-body">
          <span><a href="/student/availableExams" class="btn btn-info">Available Exams</a></span>
        </div>
      </div>

      <div class="card">
        <div class="exam-eligible">
          <img src="{{asset ('../assets/images/eligible-exams.png')}}" alt="">
        </div>
        <div class="card-body">
          <span><a href="/student/eligibleExams" class="btn btn-info">Eligible Exams</a></span>
        </div>
      </div>

      <div class="card">
        <div class="exam-result">
          <img src="{{asset ('../assets/images/exam-report.png')}}" alt="">
        </div>
        <div class="card-body">     
            <span><a href="/student/report" class="btn btn-info">View Results</a></span>
        </div>
      </div>
    </div>
  </div>
  
</section>
{% endblock %}
